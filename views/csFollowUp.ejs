    <link rel="stylesheet" href="css/clientSatisfactionCSS.css">
    <title>Follow up</title>
</head>
<body>
    <!-- nav menu -->
    <nav id = "navContainer">
        <!-- Follow up item -->
        <div class = "navFlexItem">
            <a href="/csFollowUp">
                Follow up
            </a>
        </div>
        
        <!-- Feedback item -->
        <div class = "navFlexItem">
            <a href="/csFeedback">
                Feedback
            </a>
        </div>
    </nav>

    <!-- main content container -->
    <div class = mainContentDiv>
        <!-- left segment -->
        <div class = leftSegment>
            
        </div>

        <!-- main segment -->
        <div class = mainSegment>
            <!-- title -->
            <div class = contentTitle> 
                Follow up
            </div> 
            
            <!-- form component container -->
            
            <div class = "formContainer">
                <table id = "tableFollowUp">
                    <tr>
                        <th>
                            c1r1
                        </th>
                        <th>
                            c2r1
                        </th>
                        <th>
                            c3r1
                        </th>
                    </tr>
                    
                    <tr>
                        <td>
                            c1r2
                        </td>
                        <td>
                            c2r2
                        </td>
                        <td>
                            c2r2
                        </td>
                    </tr>
                </table>
                <form id = "frmFollowUp" class = "formComponent">
                    Follow-up ID: <input type = "number" id = "followupID" class = "frmTxtField"><br/>
                    Status: <input type = "text" id = "followupStatus" class = "frmTxtField"><br/>
                    Follow-up Date: <input type ="date" id= "followupDate" class = "frmTxtField"><br/>
                    <button onclick="InsertFollowUP(followupID.value, followupStatus.value, followupDate.value)" type="button" id = "btnInsert" class="button">Insert</button>
                    <button onclick="UpdateFollowUP(followupID.value, followupStatus.value, followupDate.value)" type="button" id = "btnUpdate" class="button">Update</button>
                    <button onclick="DeleteFollowUP(followupID.value)" type="button" id = "btnDelete" class="button">Delete</button>
                </form>
            </div>
            <input type="button" value = "Set Reminder" id = "btnSetReminder" class = "button">
        </div>

        <!-- right segment -->
        <div class = rightSegment>
            
        </div>
    </div>
